// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  username String
  urls     Url[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique
  urls Url[]  @relation("TagToUrl")
}

model Url {
  id       Int     @id @default(autoincrement())
  url      String
  shortUrl String  @unique()
  user     User    @relation(fields: [userId], references: [id])
  userId   Int
  tags     Tag[]   @relation("TagToUrl")
  clicks   Click[]
}

model Click {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  url       Url      @relation(fields: [urlId], references: [id])
  urlId     Int
  userAgent String?
  ip        String?
}
